<% include partials/header %>
<div class="ui centered card" style="margin-top: 120px; text-align: center">
    <div class='content'>
        <form class ="ui form" action='/recipes/<%= recipe._id%>?_method=PUT' method='POST'>
            <div class="field">
                <label>Name: </label>
                <input type='text' name='recipe[name]' value=<%=recipe.name%>><br>
            </div>
            <div class="field">
                <label>Method: </label>
                <input type='text' name='recipe[method]' value=<%=recipe.method%>><br>
            </div>
            <div class="field">
                <label>Protein: </label>
                <input type='number' name='recipe[protein]' value=<%=recipe.macros.protein%>><br>
            </div>
            <div class="field">
                <label>Carbs: </label>
                <input type='number' name='recipe[carbs]' value=<%=recipe.macros.carbs%>><br>
            </div>
            <div class="field">
                <label>Fats: </label>
                <input type='number' name='recipe[fats]' value=<%=recipe.macros.fats%>><br>
            </div>
            <button class="ui button" type="submit">Update</button>
            
        </form>
    </div>
    <a href="/recipes/<%=recipe._id%>" class="ui bottom attached button">Back</a>
</div>

<% include partials/footer %>